<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Djomy Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'djomy'" name="djomy_credentials">
                    <field name="djomy_client_id"
                           string="Client ID"
                           required="code == 'djomy' and state != 'disabled'"/>
                    <field name="djomy_client_secret"
                           string="Client Secret"
                           required="code == 'djomy' and state != 'disabled'"
                           password="True"/>
                    <field name="djomy_partner_domain"
                           string="Partner Domain"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
