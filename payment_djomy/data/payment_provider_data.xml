<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_method_djomy" model="payment.method">
        <field name="name">Djomy</field>
        <field name="code">djomy</field>
        <field name="sequence">100</field>
        <field name="image" type="base64" file="payment_djomy/static/src/img/djomy.png"/>
        <field name="support_tokenization">False</field>
        <field name="support_express_checkout">False</field>
        <field name="support_refund">none</field>
    </record>

    <record id="payment_provider_djomy" model="payment.provider">
        <field name="name">Djomy</field>
        <field name="code">djomy</field>
        <field name="state">disabled</field>
        <field name="image_128" type="base64" file="payment_djomy/static/description/icon.png"/>
        <field name="module_id" ref="base.module_payment_djomy"/>
        <field name="inline_form_view_id" ref="inline_form"/>
        <field name="redirect_form_view_id" ref="redirect_form"/>
        <field name="payment_method_ids" eval="[Command.set([ref('payment_method_djomy')])]"/>
    </record>

</odoo>
